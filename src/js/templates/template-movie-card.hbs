<li class='movie' data-mvid='{{id}}'>
  <div class='movie__img'>
    <img
      src={{poster}}
      alt='Poster {{original_title}}'
      data-mvid='{{id}}'
      loading='lazy'
    />
  </div>
  <div class='movie__description' data-mvid='{{id}}'>
    <p class='movie__title' data-mvid='{{id}}'>
      <b data-mvid='{{id}}'>{{titleMovie}}</b>
    </p>
    <div class='movie__meta' data-mvid='{{id}}'>
      <p class='movie__genres' data-mvid='{{id}}'>{{checkGenres}}</p>
      <p class='movie__data' data-mvid='{{id}}'>{{releaseYear}}</p>
    </div>
  </div>
</li>